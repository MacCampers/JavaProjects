package model;

public class Status {
	private int experience;
	private boolean isCadre;

	public Status(int experience) {
		this.experience = experience;
		computeCadre(experience);
	}

	private void computeCadre(int experience) {
		if (experience > 0 && experience < 3)
			isCadre = false;
		else
			isCadre = true;
	}

	public String toString() {
		String str = "Status [experience=" + experience;
		str += (isCadre = true) ? " est cadre]" : " n'est pas cadre]";
		return str;
	}
}
