package model;

public class Status {
	private int experience;
	private boolean isCadre;

	public Status(int experience) {
		this.experience = experience;
		computeCadre(experience);
	}

	static void computeCadre(int experience) {
		if (experience > 0 && experience < 3)
			isCadre = false;
		else
			isCadre = true;
	}

	public String toString() {
		return "Status [experience=" + experience + ", isCadre=" + isCadre + "]";
	}
}
