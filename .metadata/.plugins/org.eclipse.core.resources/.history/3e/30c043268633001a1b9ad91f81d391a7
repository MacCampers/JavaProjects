package projetCommande;

public enum Plat {
	duJour(2), salade(1), riz;

	private int prix;

	Plat(int prix) {
		this.prix = prix;
	}

	Plat() {

	}

	public int getPlatPrix() {
		return this.prix;
	}

	public String toString() {
		String str;
		if (this.prix == 0) 
			str = "Pas de Plat";
		else
			str = name() + " " + prix + "â‚¬";
		return str;
	}
}
