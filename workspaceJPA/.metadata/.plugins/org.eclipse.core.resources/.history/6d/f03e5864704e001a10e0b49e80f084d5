		Salle s2 = new Salle(2, "Orange M�canique");
		s2.setHopital(h);
		m2.setSalle(s2);

		EntityTransaction entityTransaction = em.getTransaction();
		entityTransaction.begin();

		em.persist(p);
		em.persist(p2);

		em.persist(h);

		em.persist(s);
		em.persist(s2);

		em.persist(m);
		em.persist(m2);

		entityTransaction.commit();

		em.close();
		emf.close();
		
