<% 
String nom=request.getParameter("nom");
String prenom=request.getParameter("prenom");
int age = Integer.parseInt(request.getParameter("age"));
int ageMaj = (int) request.getAttribute("ageMaj");

String res= "Nom: " + nom + "<br />Prénom: " + prenom + "<br />Age: " + age;
res += (age<ageMaj) ? "mineur" : "majeur";
out.print(res);
%>


