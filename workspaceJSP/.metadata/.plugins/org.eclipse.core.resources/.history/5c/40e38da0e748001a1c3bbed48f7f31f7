package src.model;

public class Authentification {
	private String nom;
	private String message;

	public Authentification(String nom) {
		this.nom = nom;
		getMessageType();
	}

	private void getMessageType() {
		if (nom == "titi" || nom == "toto" || nom == "dupond")
			this.message = "OK";
		else
			this.message = "Erreur";
		System.out.println(this.message.getClass().getName());
	}

	public String getMessage() {
		return message;
	}

	public String getNom() {
		return nom;
	}

}
